<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UpdateTodoFragment.DeleteBottomSheetDialogFragment">


    <TextView
        android:id="@+id/delete_bottomSheet_titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Delete"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/deleteBottomSheetLottieAnim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete_bottomSheet_titleText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_rawRes="@raw/delete_data"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deleteBottomSheetConfirmBtn"/>

    <Button
        android:id="@+id/deleteBottomSheetConfirmBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_bottomSheet_titleText"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:text="Confirm"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:icon="@drawable/delete"
        app:backgroundTint="@color/btn_backgroundTint"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/btn_negativeTextColor"
        app:iconTint="@color/btn_iconTint"/>



</androidx.constraintlayout.widget.ConstraintLayout>